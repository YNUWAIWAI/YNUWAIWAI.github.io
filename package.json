{
  "name": "hp",
  "version": "1.0.0",
  "author": "Yudai Udagawa <nimius.rd@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf src/assets/**/bundle.*",
    "build": "run-s clean build:*",
    "build:webpack": "webpack --mode=development -d",
    "build:jekyll": "cross-env JEKYLL_ENV=development bundle exec jekyll build",
    "build:production": "run-s build:production:*",
    "build:production:webpack": "webpack --mode=production",
    "build:production:jekyll": "cross-env JEKYLL_ENV=production bundle exec jekyll build",
    "test": "run-s test:*",
    "test:stylelint": "stylelint webpack/postcss/**/*",
    "test:eslint": "eslint webpack/js/**/*",
    "watch:webpack": "webpack --mode=development -d --progress -w",
    "watch:jekyll": "cross-env JEKYLL_ENV=development bundle exec jekyll serve -H 0.0.0.0 --livereload",
    "start": "run-p watch:*",
    "post": "node tools/createPost.js"
  },
  "repository": {
    "url": "git@github.com:YNUWAIWAI/YNUWAIWAI.github.io.git",
    "type": "git"
  },
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^3.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.0.1",
    "glob": "^7.1.3",
    "mini-css-extract-plugin": "^0.8.0",
    "moment": "^2.29.2",
    "npm-run-all": "^4.1.5",
    "postcss-custom-media": "^7.0.8",
    "postcss-import": "^12.0.1",
    "postcss-initial": "^3.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.1.2",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-order": "^3.0.1",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  }
}
